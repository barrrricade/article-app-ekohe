<div class="search-bar">
  <%= form_tag articles_path, class: "form-display", method: :get do %>
    <%= text_field_tag :query,
    params[:query],
    class: "form-control",
      placeholder: "Find a movie"
      %>
      <%= submit_tag "Search", class: "btn btn-primary search-btn" %>
  <% end %>
</div>

